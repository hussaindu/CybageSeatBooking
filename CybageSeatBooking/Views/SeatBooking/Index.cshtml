@model IEnumerable<SeatBooking>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Booked Seats";
    var currentUserId = UserManager.GetUserId(User);
}

<h2 class="mb-4">Booked Seats</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Warning:</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success:</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Seat Number</th>
            <th>Booking ID</th>
            <th>Booked By</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            var isCurrentUser = booking.User != null && booking.User.Id == currentUserId;
            var rowClass = isCurrentUser ? "table-success" : "";

            <tr class="@rowClass">
                <td>
                    @if (booking.Seat != null)
                    {
                        @booking.Seat.SeatNumber
                    }
                    else
                    {
                        <span class="text-danger">No Seat Assigned</span>
                    }
                </td>
                <td>@booking.Id</td>
                <td>
                    @if (booking.User != null)
                    {
                        @booking.User.UserName
                    }
                    else
                    {
                        <span class="text-danger">No User</span>
                    }
                </td>
                <td>@booking.StartDate.ToString("dd-MMM-yyyy")</td>
                <td>@booking.EndDate.ToString("dd-MMM-yyyy")</td>
                <td>
                    @if (isCurrentUser)
                    {
                        <a asp-action="Cancel" asp-route-id="@booking.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to cancel this booking?');">
                            Cancel
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Not allowed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
